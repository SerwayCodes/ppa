<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Progress Report - <%= student.first_name %> <%= student.last_name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        
        .report-container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        
        .header {
            text-align: center;
            border-bottom: 3px double #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        
        .school-name {
            font-size: 28px;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 5px;
            text-transform: uppercase;
        }
        
        .school-motto {
            font-size: 16px;
            font-style: italic;
            color: #7f8c8d;
            margin-bottom: 15px;
        }
        
        .report-title {
            font-size: 22px;
            font-weight: bold;
            color: #34495e;
            margin: 15px 0;
        }
        
        .student-info-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        
        .info-item {
            margin-bottom: 10px;
            font-size: 16px;
        }
        
        .info-label {
            font-weight: bold;
            display: inline-block;
            width: 180px;
        }
        
        .results-table {
            width: 100%;
            margin-bottom: 30px;
            border-collapse: collapse;
        }
        
        .results-table th {
            background-color: #2c3e50;
            color: white;
            padding: 12px;
            text-align: center;
            font-weight: bold;
            border: 1px solid #34495e;
        }
        
        .results-table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }
        
        .subject-col {
            text-align: left;
            font-weight: bold;
            background-color: #f8f9fa;
        }
        
        .total-row {
            background-color: #e8f4f8;
            font-weight: bold;
        }
        
        .grade-A { background-color: #d4edda !important; }
        .grade-B { background-color: #d1ecf1 !important; }
        .grade-C { background-color: #fff3cd !important; }
        .grade-D { background-color: #f8d7da !important; }
        .grade-F { background-color: #f5c6cb !important; }
        
        .remarks-section {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }
        
        .remarks-box {
            background: white;
            border: 1px solid #ddd;
            padding: 15px;
            min-height: 80px;
            border-radius: 5px;
            margin: 10px 0;
        }
        
        .signature-area {
            border-top: 2px solid #333;
            padding-top: 20px;
            margin-top: 30px;
        }
        
        .print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }
        
        .watermark {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            font-size: 100px;
            color: rgba(0,0,0,0.05);
            z-index: -1;
            pointer-events: none;
            font-weight: bold;
        }
        
        .stats-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .stat-value {
            font-size: 24px;
            font-weight: bold;
            color: #3498db;
        }
        
        .stat-label {
            font-size: 14px;
            color: #7f8c8d;
        }
        
        .performance-badge {
            font-size: 14px;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
        }
        
        .badge-excellent { background-color: #28a745; color: white; }
        .badge-good { background-color: #17a2b8; color: white; }
        .badge-average { background-color: #ffc107; color: black; }
        .badge-poor { background-color: #dc3545; color: white; }
    </style>
</head>
<body>
    <div class="watermark">PREGOUS PRIVATE ACADEMY</div>
    
    <!-- Print Button -->
    <div class="print-button">
        <button onclick="window.print()" class="btn btn-primary">
            <i class="fas fa-print"></i> Print Report
        </button>
    </div>
    
    <div class="report-container">
        <!-- Header -->
        <div class="header">
            <div class="school-name">PRECIOUS PRIVATE ACADEMY</div>
            <div class="school-motto">"YOUR CHILD'S FUTURE IS NOW NOT LATER"</div>
            <div class="report-title">Student Term <%= termNumber %> Progress Report - <%= academicYear %></div>
        </div>

        <!-- Student Information -->
        <div class="student-info-card">
            <div class="row">
                <div class="col-md-6">
                    <div class="info-item">
                        <span class="info-label">Student Reg#:</span>
                        <span><%= student.student_id %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Student Name:</span>
                        <span><%= student.first_name %> <%= student.last_name %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Form:</span>
                        <span><%= classInfo.class_name %></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <span class="info-label">Position:</span>
                        <span><%= studentRank.position %> out of <%= studentRank.totalStudents %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Term Average:</span>
                        <span><%= studentRank.averageMarks %>%</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Overall Grade:</span>
                        <span class="performance-badge badge-<%= getGradeClass(studentRank.overallGrade) %>">
                            <%= studentRank.overallGrade %>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Stats -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stats-card text-center">
                    <div class="stat-value"><%= studentRank.totalMarks %></div>
                    <div class="stat-label">Total Marks</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card text-center">
                    <div class="stat-value"><%= studentRank.averageMarks %>%</div>
                    <div class="stat-label">Average Score</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card text-center">
                    <div class="stat-value"><%= studentRank.position %></div>
                    <div class="stat-label">Class Position</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card text-center">
                    <div class="stat-value"><%= studentRank.totalStudents %></div>
                    <div class="stat-label">Total Students</div>
                </div>
            </div>
        </div>

        <!-- Results Table -->
        <div class="table-responsive">
            <table class="results-table">
                <thead>
                    <tr>
                        <th>SUBJECT</th>
                        <th>MARKS %</th>
                        <th>GRADES</th>
                        <th>POSITION</th>
                        <th>REMARKS</th>
                    </tr>
                </thead>
                <tbody>
                    <% subjects.forEach(subject => { 
                        const gradeClass = getGradeClass(subject.grade);
                    %>
                    <tr>
                        <td class="subject-col text-align-left"><%= subject.subject_name %></td>
                        <td class="grade-<%= gradeClass %>"><%= subject.marks || 'N/A' %></td>
                        <td class="grade-<%= gradeClass %>"><%= subject.grade || 'N/A' %></td>
                        <td><%= subject.position || 'N/A' %></td>
                        <td><%= getRemarks(subject.grade) %></td>
                    </tr>
                    <% }) %>
                    <tr class="total-row">
                        <td class="subject-col"><strong>TOTAL</strong></td>
                        <td><strong><%= studentRank.totalMarks %></strong></td>
                        <td><strong><%= studentRank.overallGrade %></strong></td>
                        <td><strong><%= studentRank.position %></strong></td>
                        <td><strong><%= getOverallRemarks(studentRank.overallGrade) %></strong></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Grading Scale -->
        <div class="alert alert-info text-center">
            <strong>GRADING SCALE:</strong> A=(80-100), B=(70-79), C=(55-69), D=(40-54), F=(00-39)
        </div>

        <!-- Remarks Section -->
        <div class="remarks-section">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-user-graduate"></i> Form Teacher Remarks</h5>
                    <div class="remarks-box">
                        <%= formTeacherRemarks %>
                    </div>
                    <div class="signature-area mt-3">
                        <p>Signature: _________________________</p>
                        <p class="text-muted">Form Teacher</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5><i class="fas fa-user-tie"></i> Principal's Remarks</h5>
                    <div class="remarks-box">
                        <%= principalRemarks %>
                    </div>
                    <div class="signature-area mt-3">
                        <p>Signature: _________________________</p>
                        <p class="text-muted">Principal</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Fees Information -->
        <div class="card mt-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> FEES STRUCTURE FOR NEXT TERM</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>ITEM</th>
                                <th>AMOUNT (MK)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>DAY SCHOLAR</td>
                                <td>MK150,000.00</td>
                            </tr>
                            <tr>
                                <td>SCHOOL UNIFORM</td>
                                <td>MK110,000.00</td>
                            </tr>
                            <tr class="table-success">
                                <td><strong>TOTAL</strong></td>
                                <td><strong>MK260,000.00</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <strong>Next term opens on:</strong> _________________________
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4 text-muted">
            <p>This is a computer generated report. Printed on: <%= new Date().toLocaleDateString() %></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Helper functions
        function getRemarks(grade) {
            const remarks = {
                'A': 'Excellent',
                'B': 'Very Good', 
                'C': 'Good',
                'D': 'Satisfactory',
                'F': 'Needs Improvement'
            };
            return remarks[grade] || 'N/A';
        }

        function getOverallRemarks(grade) {
            const overallRemarks = {
                'A': 'Outstanding Performance',
                'B': 'Very Good Performance',
                'C': 'Good Performance', 
                'D': 'Average Performance',
                'F': 'Needs Significant Improvement'
            };
            return overallRemarks[grade] || 'N/A';
        }

        function getGradeClass(grade) {
            if (!grade) return '';
            switch(grade) {
                case 'A': return 'A';
                case 'B': return 'B';
                case 'C': return 'C';
                case 'D': return 'D';
                case 'F': return 'F';
                default: return '';
            }
        }

        // Print styles
        window.addEventListener('DOMContentLoaded', (event) => {
            const style = document.createElement('style');
            style.innerHTML = `
                @media print {
                    body * {
                        visibility: hidden;
                    }
                    .report-container, .report-container * {
                        visibility: visible;
                    }
                    .report-container {
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        box-shadow: none;
                    }
                    .print-button {
                        display: none !important;
                    }
                    .watermark {
                        opacity: 0.1;
                    }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>