<!DOCTYPE html>
<html lang="en">
  <%- include('../include/head' ); -%>
  <body>
    <div class="main-wrapper">
      <%- include('../include/pageheader'); -%> <%-
      include('../include/lecturer_sidebar' ); -%>
      <div class="page-wrapper">
        <div class="content container-fluid">
          <div class="page-header">
            <div class="row align-items-center">
              <div class="col">
                <h3 class="page-title">Lecturer</h3>
                <ul class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="index.html">Class</a>
                  </li>
                  <li class="breadcrumb-item active">Students</li>
                </ul>
              </div>
              <div class="col-auto text-right float-right ml-auto">
                <a href="#" class="btn btn-outline-primary mr-2"
                  ><i class="fas fa-download"></i> Download</a
                >
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-body">
                  <div class="table-responsive">
                    <table
                      class="table table-hover table-center mb-0 datatable"
                    >
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Student ID</th>
                          <th>First Name</th>
                          <th>Surname</th>
                          <th>Allowed in Class</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let count = 1 %> <%
                        students.forEach(function(student) { %>
                        <tr>
                          <td><%= count %></td>
                          <td><%= student.student_id %></td>
                          <td><%= student.first_name %></td>
                          <td><%= student.last_name %></td>
                          <td><%= student.allowed_class %></td>
                        </tr>
                        <% count++ %> <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%- include('../include/footer' ); -%>
      </div>
    </div>
    <%- include('../include/scripts' ); -%>
  </body>
</html>
